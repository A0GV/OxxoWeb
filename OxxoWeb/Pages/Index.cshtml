@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="ImgOxx">
        <img class="ImgOxx mx-auto d-block" src="~/img/OxxoLogo.svg.png" alt="Imagen de OxxoLogo jaja alt xd">
    </div>
    <div class="text-center Titillium">
        <div class="PrimerText">
            Iniciar sesión
        </div>
        <div class="SegundoTexto Titillium">
            Introduce tus datos para continuar
        </div>
    </div>
    <form method="post">
        <div class="ContenedoresLogin">
            <input type="text" asp-for="Username" placeholder="Usuario" />
        </div>
        <br>
        <div class="ContenedoresLogin" id="Contraseña">
            <input type="password" asp-for="Password" placeholder="Contraseña" />
        </div>
        <div class="form-check RecordarUsuario" id="Recordar">
            <input class="form-check-input" type="checkbox" id="check1" name="option1" value="something" checked>
            <label class="form-check-label">Mantenerma ingresado</label>
        </div>
        <div class="Enter">
            <input type="submit" value="Ingresar">
        
        </div>
    </form>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-center mt-3">
            @Model.ErrorMessage
        </div>
    }
    <div class="OlvidadoYAyuda text-center">
        <a href="#">¿Se te olvidó la Contraseña?</a> <br>
        <a href="#">¿Necesitas ayuda? Contáctanos</a>
    </div>
</div>