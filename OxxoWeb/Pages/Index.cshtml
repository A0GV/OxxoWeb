@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["HideHeader"] = true; // Indicar que esta página no debe mostrar el header
}

<div class="login-full-container bckColor">
    <!-- Imagen izquierda -->
    <div class="login-side-image-container left">
        <img src="~/img/backGroundImgIzquierda.png" class="login-side-image">
    </div>
    
    <!-- Contenido central (formulario de login) -->
    <div class="login-central-container">
        <div class="login-central-content">
            <div class="ImgOxx">
                <img class="ImgOxx mx-auto d-block" src="~/img/OxxoLogo.svg.png" alt="Imagen de OxxoLogo jaja alt xd">
            </div>
            <div class="text-center Titillium">
                <div class="PrimerText">
                    Iniciar sesión
                </div>
                <div class="SegundoTexto Titillium">
                    Introduce tus datos para continuar
                </div>
            </div>
            <form method="post">
                <div class="ContenedoresLogin">
                    <input type="text" asp-for="Username" placeholder="Usuario" />
                </div>
                <br>
                <div class="ContenedoresLogin" id="Contraseña">
                    <input type="password" asp-for="Password" placeholder="Contraseña" />
                </div>
                <br>
                <br>
                <div class="Enter">
                    <input type="submit" value="Ingresar">
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger text-center mt-3">
                    @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
    
    <!-- Imagen derecha -->
    <div class="login-side-image-container right">
        <img src="~/img/backGroundImgDerecha.png" class="login-side-image">
    </div>
</div>