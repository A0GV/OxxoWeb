@page
@model GerenteModel
@{
    ViewData["Title"] = "Asesores de tienda";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4 Titillium">
    <h1>Asesores de tienda</h1>

    <!-- Tabla de asesores -->
    <div class="table-responsive background-beige-cell rounded shadow-sm mt-4">
        <table class="table table-hover table-borderless align-middle">
            <thead class="table-header-custom">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Tiendas</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asesor in Model.ListaAsesores)
                {
                    <tr>
                        <td>
                            <img src="~/img/@asesor.Foto" alt="Foto asesor" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                            @asesor.Nombre
                        </td>
                        <td>@asesor.Correo</td>
                        <td>@asesor.Tienda</td>
                        <td>
                            <a class="btn btn-sm btn-outline-secondary me-2" title="Ver"><i class="bi bi-eye"></i></a>
                            <a class="btn btn-sm btn-outline-secondary me-2" title="EstadÃ­sticas"><i class="bi bi-bar-chart-line"></i></a>
                            <a class="btn btn-sm btn-outline-secondary" title="Asignar tarea"><i class="bi bi-clipboard-plus"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
