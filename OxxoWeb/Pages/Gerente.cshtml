@page
@model OxxoWeb.Pages.GerenteModel

@{
    ViewData["Title"] = "Asesores de tienda";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4 Titillium">
    <h1>Asesores de tienda</h1>

    <!-- Tabla de asesores -->
    <div class="table-responsive background-beige-cell mt-4 p-4 rounded shadow-sm">
        <table class="table table-hover table-borderless align-middle">
            <thead class="table-header-custom">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Tienda</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (OxxoWeb.Models.AsesorInfo asesor in Model.ListaAsesores)
                {
                    <tr class="align-middle">
                        <td>
                            <div class="d-flex align-items-center gap-3">
                                <img src="~/img/@asesor.Foto" alt="Foto asesor" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                <span>@asesor.Nombre @asesor.ApellidoPat</span>

                            </div>
                        </td>
                        <td>@asesor.Correo</td>
                        <td>@asesor.PlazaNombre.Replace("_", ", ")</td>
                        <td>
                            <a class="btn btn-sm btn-outline-secondary me-2" title="Ver"><i class="bi bi-eye"></i></a>
                            <a class="btn btn-sm btn-outline-secondary me-2" title="EstadÃ­sticas"><i class="bi bi-bar-chart-line"></i></a>
                            <a class="btn btn-sm btn-outline-secondary" title="Asignar tarea"><i class="bi bi-clipboard-plus"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>>