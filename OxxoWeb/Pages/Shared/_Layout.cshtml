<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OxxoWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OxxoWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/leaderboard.css" asp-append-version="true" /> <!-- leaderboard styles -->
    <link rel="stylesheet" href="~/css/perfil.css" asp-append-version="true" /> <!-- perfiles styles -->
    <link rel="stylesheet" href="~/css/recordatorio.css" asp-append-version="true" />
<!-- Added google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<!-- maybe -->
@{
    var tipoUsuario = Context.Session.GetInt32("TipoUsuario");
    var paginaInicio = tipoUsuario == 2 ? "/Gerente" : "/Home";
    var paginaRecordatorios = tipoUsuario == 2 ? "/GerentePanel" : "/Recordatorios";
}
<!-- maybe -->
<body>
    @if (!(ViewData["HideHeader"] != null && (bool)ViewData["HideHeader"] == true))
    {
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 NavBarAdolf">
            <div class="container eidolf">
                <a class="navbar-brand" id="IconoxxoA" asp-area="" asp-page="/Index">
                    <img id="IconOxxoImg" src="~/Img/OxxoForDash.jpg" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 navbarIconsAdolf">
                        <li class="nav-item">
                            <!-- maybe -->
                            <a class="nav-link text-dark" asp-area="" asp-page="@paginaInicio">
                                <!-- maybe -->
                                <div class="nav-icon-container">
                                    <span class="material-symbols-outlined">home</span>
                                    <span class="nav-text">Inicio</span>
                                </div>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/#">
                                <div class="nav-icon-container">
                                    <span class="material-symbols-outlined">sports_esports</span>
                                    <span class="nav-text">Juegos</span>
                                </div>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Leaderboard">
                                <div class="nav-icon-container">
                                    <span class="material-symbols-outlined">leaderboard</span>
                                    <span class="nav-text">Clasificación</span>
                                </div>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/#">
                                <div class="nav-icon-container">
                                    <span class="material-symbols-outlined">monitoring</span>
                                    <span class="nav-text">Estadísticas</span>
                                </div>
                            </a>
                        </li>
                        

                        <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-page="@paginaRecordatorios">
        <div class="nav-icon-container">
            <span class="material-symbols-outlined">
                @(tipoUsuario == 2 ? "assignment" : "notifications")
            </span>
            <span class="nav-text">
                @(tipoUsuario == 2 ? "Tareas" : "Recordatorios")
            </span>
        </div>
    </a>
</li>



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Perfil">
                                <div class="nav-icon-container">
                                    <span class="material-symbols-outlined">Person</span>
                                    <span class="nav-text">Perfil</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - OxxoWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
